{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "console-experience",
  "version": "0.1.0",
  "identifier": "com.console.experience",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:e2e",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "console-experience",
        "width": 1280,
        "height": 720,
        "fullscreen": true,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' asset: https://cdn.akamai.steamstatic.com https://images.unsplash.com data:; connect-src 'self' ipc: http://localhost:*",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPLOCALDATA/covers/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["libryzenadj.dll", "inpoutx64.dll", "WinRing0x64.dll"]
  }
}
